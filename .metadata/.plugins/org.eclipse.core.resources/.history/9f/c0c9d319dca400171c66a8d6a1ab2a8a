<p>
	<strong>タイトル：</strong>
	<%= @post.title %>
</p>
 
<p>
	<strong>内容：</strong>
	<%= @post.text %>
</p>

<h2>コメント</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>コメンター：</strong>
    <%= simple_format comment.commenter %>
  </p>
   
  <p>
    <strong>コメント：</strong>
    <%= simple_format comment.body %>
  </p>
<% end %>

<h2>コメントを追加</h2>
<%= form_for( [@post, @post.comments.build] ) do |f| %>
<p>
	<%= f.label :commenter, "コメンター" %><%= f.text_field :commenter %>
</p>

<p>
	<%= f.label :body, "コメント" %><%= f.text_area :body, cols: 60, rows: 8 %>
</p>

<p>
	<%= f.submit %>
</p>
<% end %>

<%= link_to '戻る', posts_path %>
|<%= link_to '編集', edit_post_path(@post) %>
